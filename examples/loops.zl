const main = fn() {
  print("Welcome to loops, press <Enter> to start");
  read_line();

  // A simple for loop, printing up until whatever number you type!
  print("Type a number:");
  const max = read_num();

  print("Using a while loop!");
  var total = 0;
  var i = 0;
  for i < max {
    total = total + i;
    i = i + 1;
  };
  print(total);

  print("Using a for loop!");
  var total = 0;
  for var i = 0; i < max; i = i + 1 {
    total = total + i;
  };
  print(total);

};
